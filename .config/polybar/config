[module/memory-usage]
type = custom/script
interval = 2
exec = free -m | awk '/Mem/ {print $3}'
label = %output:0:5:...% MB
format = <label>
format-underline = ${colors.purple}
format-prefix = "| "
format-prefix-foreground = ${colors.pink}
format-suffix = " |"
format-suffix-foreground = ${colors.pink}



