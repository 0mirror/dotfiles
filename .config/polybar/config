[module/mic]
type = custom/script
interval = 2
exec = [[ $(pulsemixer --id source-1 --get-mute) == 1 ]] && echo muted
label = %output%
format = <label>

[module/xwindow]
type = internal/xwindow
;label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock

format-underline = ${colors.purple}
format-prefix = "| "
format-prefix-foreground = ${colors.pink}
format-suffix = " |"
format-suffix-foreground = ${colors.pink}

label-layout = %layout%
label-indicator-on-capslock = Caps On
label-indicator-off-capslock = 
label-indicator-padding = 2
label-indicator-margin = 1

[module/filesystem]
type = internal/fs
interval = 30
spacing = 4

mount-0 = /

;label-mounted = %{F#D789D7}root%{F-}: %used% / %total%
label-mounted = %used% / %total%
format-mounted-underline = ${colors.purple}
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.pink}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
